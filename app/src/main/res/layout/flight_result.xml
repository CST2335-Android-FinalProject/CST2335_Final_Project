<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/airline"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Airline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightNumber"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Flight#"
        app:layout_constraintBottom_toBottomOf="@+id/airline"
        app:layout_constraintStart_toEndOf="@+id/airline"
        app:layout_constraintTop_toTopOf="@+id/airline" />

    <TextView
        android:id="@+id/arrivalAirport"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Arrival#"
        app:layout_constraintBottom_toBottomOf="@+id/flightNumber"
        app:layout_constraintStart_toEndOf="@+id/flightNumber"
        app:layout_constraintTop_toTopOf="@+id/flightNumber" />

    <TextView
        android:id="@+id/status"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Status"
        app:layout_constraintBottom_toBottomOf="@+id/arrivalAirport"
        app:layout_constraintStart_toEndOf="@+id/arrivalAirport"
        app:layout_constraintTop_toTopOf="@+id/arrivalAirport" />

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Departure"
        app:layout_constraintBottom_toBottomOf="@+id/status"
        app:layout_constraintStart_toEndOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/status" />

    <TextView
        android:id="@+id/arrivalTime"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Arrival"
        app:layout_constraintStart_toEndOf="@+id/departureTime"
        app:layout_constraintTop_toTopOf="@+id/departureTime" />


</androidx.constraintlayout.widget.ConstraintLayout>